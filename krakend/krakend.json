{
  "version": 2,
  "name": "KrakenD on k8s",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "github_com/devopsfaith/krakend-cors": {
    "allow_origins": [
      "*"
    ],
    "expose_headers": [
      "Content-Length"
    ],
    "max_age": "12h",
    "allow_methods": [
      "GET",
      "POST"
    ],
    "allow_credentials": true,
    "allow_headers": [
      "Origin",
      "Authorization",
      "Content-Type"
    ]
  },
  "endpoints": [
    {
      "endpoint": "/api",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": [
            "http://sanic-server:8000"
          ],
          "url_pattern": "/"
        }
      ]
    },
    {
      "endpoint": "/token",
      "backend": [
        {
          "host": [
            "http://go-jwt:8020"
          ],
          "url_pattern": "/token"
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/signer": {
          "alg": "HS256",
          "kid": "sim2",
          "keys-to-sign": [
            "access_token",
            "refresh_token"
          ],
          "jwk-url": "http://go-jwt:8020/auth.json",
          "disable_jwk_security": true
        }
      }
    }
  ]
}