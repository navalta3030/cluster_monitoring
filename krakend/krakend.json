{
  "version": 2,
  "name": "KrakenD on k8s",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/api",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": [
            "http://sanic-server:8000"
          ],
          "url_pattern": "/"
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "HS256",
          "issuer": "https://krakend.io",
          "jwk-url": "http://go-jwt:8020/auth.json",
          "disable_jwk_security": true
        }
      }
    }
  ]
}